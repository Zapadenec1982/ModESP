{
  "comment": "Приклад конфігурації з асинхронним драйвером DS18B20",
  "poll_interval_ms": 2000,
  "publish_on_error": true,
  "sensors": [
    {
      "role": "chamber_temp_1",
      "type": "DS18B20_Async",
      "publish_key": "state.sensor.chamber_temp_1",
      "config": {
        "hal_id": "ONEWIRE_BUS_1",
        "address": "28FF123456789012",
        "resolution": 12,
        "offset": 0.0,
        "max_retries": 3
      }
    },
    {
      "role": "chamber_temp_2", 
      "type": "DS18B20_Async",
      "publish_key": "state.sensor.chamber_temp_2",
      "config": {
        "hal_id": "ONEWIRE_BUS_1",
        "address": "28FF234567890123",
        "resolution": 12,
        "offset": -0.5,
        "max_retries": 3
      }
    },
    {
      "role": "evaporator_temp",
      "type": "DS18B20_Async",
      "publish_key": "state.sensor.evaporator_temp", 
      "config": {
        "hal_id": "ONEWIRE_BUS_1",
        "address": "28FF345678901234",
        "resolution": 11,
        "offset": 0.2,
        "max_retries": 2
      }
    },
    {
      "role": "ambient_temp",
      "type": "NTC",
      "publish_key": "state.sensor.ambient_temp",
      "config": {
        "hal_id": "ADC_AMBIENT_TEMP",
        "ntc_type": "10K_3950",
        "r_series": 10000,
        "vcc": 3.3,
        "averaging_samples": 10,
        "offset": 0.0
      }
    }
  ]
}
