{
  "poll_interval_ms": 10000,
  "publish_on_error": true,
  "sensors": [
    {
      "role": "chamber_temp",
      "type": "DS18B20_Async",
      "publish_key": "state.sensor.chamber_temp",
      "config": {
        "hal_id": "ONEWIRE_BUS_1",
        "address": "auto",
        "resolution": 12,
        "offset": 0.0,
        "read_timeout_ms": 1000
      }
    },
    {
      "role": "evaporator_temp", 
      "type": "DS18B20_Async",
      "publish_key": "state.sensor.evaporator_temp",
      "config": {
        "hal_id": "ONEWIRE_BUS_2",
        "address": "auto",
        "resolution": 12,
        "offset": 0.0,
        "read_timeout_ms": 1000
      }
    }
  ]
}